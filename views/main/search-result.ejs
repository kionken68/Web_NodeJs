<% layout('layout') -%>
<div class="container">
  <div class="row">

<% if(data.length===0) { %>
  <h3>Search not found with "<%=query %>"</h3>
  <% } else { %>
    <h3>Results for "<%=query %>"</h3>

  </div>
</div>

    <div class="container">
    <div class="row">
      <h3>Số lượng:<%= data.length %></h3>
      <% for(var i=0;i < data.length;i++) { %>
      <div class="col-md-4">
        <a href="/product/<%= data[i]._id %>">
            <div class="thumbnail">
              <img src="<%= data[i]._source.image %>"/>
              <div class="caption">
                  <h3><%= data[i]._source.name %></h3>
                  <p><%= data[i]._source.category.name %></h3>
                  <p>$<%= data[i]._source.price %></p>
              </div>
            </div>
        </a>
      </div>
      <% } %>
    </div>
  </div>

    <% } %>
